<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Güzellik Admin</title>
    <link rel="stylesheet" href="~/css/app.v1.css" />
    <link rel="stylesheet" href="~/dist/css/font-awesome.min.css" />
    <link rel="shortcut icon" href="~/favicon.png" />
    <script src="~/dist/js/jquery.min.js"></script>
    <script src="~/js/app.v1.js"></script>

    <script src="~/dist/js/chartjs/Chart.min.js"></script>
    <script src="~/dist/pages/dashboard.js"></script>
</head>

<body>
    <header>
        <div class="logo">
            <div class="img">
                <span class="logo-text">ADMIN</span>
                <span class="logo-text minbar">A</span>
            </div>
        </div>
        <div class="topbar">
            <div class="left">
                <a class="navbar-collopse"> <i class="fa fa-bars"></i> </a>
                <span class="topbar-title">Dashboard</span>
            </div>
            <div class="right">
                <span class="">
                    <i class="fa fa-bell"></i>
                </span>
                <div class="topbar-btn">
                    <span class="displayname">
                        Admin
                        <i class="fa fa-angle-down"></i>
                    </span>
                    <ul class="dropdown">
                        <li class="dropdown-username">
                            <a href="#"> Admin </a>
                        </li>

                        <li>
                            <a href="#"> Ayarlar </a>
                        </li>
                        <li class="dropdown-footer">
                            <a href="/Home"> Çıkış </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="main">
        <aside>
            <nav>
                <ul class="nav">
                    <li class="active">
                        <a href="/Admin">
                            <i class="fa fa-dashboard"></i>
                            <span class="span">Dashboard</span>
                        </a>
                    </li>

                    <li>
                        <a href="/Uye/">
                            <i class="fa fa-users"></i>
                            <span class="span">Müşteri İşlemleri</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Randevu/">
                            <i class="fa fa-calendar"></i>
                            <span class="span">Randevularımız</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Calisan/">
                            <i class="fa fa-user"></i>
                            <span class="span">Çalışanlarımız</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Hizmet/">
                            <i class="fa fa-tasks" aria-hidden="true"></i>
                            <span class="span">Hizmetlerimiz</span>
                            <span class="span"> </span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="nav-footer">
                <a href="/Home" class="btn btn-sm">
                    <i class="fa fa-sign-out"></i>
                </a>
            </div>
        </aside>
        <div class="page-container">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts",false)
</body>
</html>
